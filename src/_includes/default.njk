<!doctype html>
<html lang="zh">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>{{ title or "LangLang Insight" }}</title>

  <meta name="description" content="{{ description or '用故事讲清宏观经济机制与金融史' }}">
  <link rel="stylesheet" href="/assets/css/theme.css">
  <link rel="icon" href="/assets/favicon.png">
  <meta property="og:title" content="{{ title or 'LangLang Insight' }}">
  <meta property="og:description" content="{{ description or '用故事讲清宏观经济机制与金融史' }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ page.url | url }}">
</head>
<body>
  <header class="header">
    <div class="container nav">
      <a href="/" class="site-title">LangLang Insight</a>
      <nav style="margin-left:auto; display:flex; gap:16px">
        <a href="/">首页</a>
        <a href="/series/">系列</a>
      </nav>
    </div>
  </header>

  <main class="container main">
    <article class="card article">
      {% if title %}<h1>{{ title }}</h1>{% endif %}
      <div>{{ content | safe }}</div>
    </article>
  </main>

  <footer class="container footer">
    <div>&copy; 2025 LangLang Insight · All rights reserved</div>
  </footer>
</body>
</html>
